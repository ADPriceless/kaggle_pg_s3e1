{
    "random_state": 42,

    "preprocess": {
        "do_preproc": true,
        "append_sklearn_dataset": true,
        "add_attributes": false,
        "enable_dist_to_coast": true,
        "combined_attrs": {
            "RoomsPerBedrm":   true,
            "MedIncPerPop":    true,
            "AveOccupPerRoom": true,
            "MedIncPerRoom":   true,
            "MedIncPerBedrm":  true
        },      
        "kmeans": {
            "enable": true,
            "n_clusters": 25
        },
        "do_scale": true
    },

    "cross_validation": {
        "do_cross_val": true,
        "num_splits": 5,
        "scoring": ["neg_mean_absolute_error", "neg_root_mean_squared_error"]
    }
}